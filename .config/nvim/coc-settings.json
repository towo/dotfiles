{
  "languageserver": {
    "puppet": {
      "command": "ruby",
      "args": ["/opt/puppet-editor-services/puppet-languageserver","--stdio"],
      "cwd": "/opt/puppet-editor-services",
      "filetypes": ["puppet"],
      "rootPatterns": [".git/", "metadata.json", "environment.conf"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "suggest.maxCompleteItemCount": 100,
  "suggest.enablePreview": true,
  "solargraph.checkGemVersion": false,
  "solargraph.diagnostics": true
}
