export ADOTDIR="${XDG_DATA_HOME}/antigen"
export ANTIGEN_CHECK_FILES=$ZDOTDIR/zshrc
export ANTIGEN_AUTO_CONFIG=false
export ANTIGEN_COMPDUMP="${XDG_CACHE_HOME}/zsh/zcompdump"

source $ZDOTDIR/antigen.zsh
antigen bundle skx/sysadmin-util
#antigen bundle nojhan/liquidprompt
antigen bundle rimraf/k
antigen bundle zsh-users/zsh-completions
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle taskwarrior
antigen bundle marzocchi/zsh-notify
antigen bundle zuxfoucault/colored-man-pages_mod
antigen bundle nviennot/zsh-vim-plugin
antigen bundle rbirnie/oh-my-zsh-keybase
antigen bundle mollifier/cd-gitroot
antigen theme bhilburn/powerlevel9k powerlevel9k
antigen apply

if [[ $TERM == 'linux' ]]; then
	prompt_powerlevel9k_teardown
fi

